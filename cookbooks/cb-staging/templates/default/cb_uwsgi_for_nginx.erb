# mysite_uwsgi.ini file
[uwsgi]

# Django-related settings
# the base directory (full path)
chdir           = /home/ubuntu/bridge-controller
# Django's wsgi file
module          = bridge_controller.wsgi
pythonpath  = /home/ubuntu/bridge-controller
#env        = DJANGO_SETTINGS_MODULE=os.getenv('DJANGO_SETTINGS_MODULE', None)
#env        = DJANGO_SECRET_KEY=os.getenv('DJANGO_SECRET_KEY', None)
env         = DJANGO_SETTINGS_MODULE=<%= @django_settings_module %>
env         = DJANGO_SECRET_KEY=<%= @django_secret_key %>
module      = django.core.handlers.wsgi:WSGIHandler()
# the virtualenv (full path)
#home            = /path/to/virtualenv

# process-related settings
# master
master          = true
# maximum number of worker processes
processes       = 10
# the socket (use the full path to be safe
socket          = /tmp/uwsgi_bridge_controller.sock
#socket          = :8080
# ... with appropriate permissions - may be needed
chmod-socket    = 777
# clear environment on exit
vacuum          = true

